<h3><a class="btn btn-secondary" href="/PetControllers"><i class="fa fa-plus"></i> Create New</a> Pet List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Pet_id</th>
            <th>PetName</th>
            <th>PetAge</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.Pet_id}}</td>
            <td>{{this.PetName}}</td>
            <td>{{this.PetAge}}</td>
            <td>
                <a href="/PetController/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/PetController/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this Pet ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>